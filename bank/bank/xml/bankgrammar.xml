<?xml version="1.0" encoding="UTF-8"?>
	
<grammar xmlns="http://www.w3.org/2001/06/grammar" xml:lang="en-US"> 
    
    <rule id="MENURULE" scope="public">
                <one-of>
						<item> create account
							<tag> out.menu = "account";</tag>
						</item>
						<item> check balance
							<tag> out.menu = "balance";</tag>
						</item>
						<item> operations
							<tag> out.menu = "operations";</tag>
						</item>
				</one-of>
    </rule>
	
	<rule id="OPRULE" scope="public">
                <one-of>
						<item> incoming
							<tag> out.optype = "in";</tag>
						</item>
						<item> outbound
							<tag> out.optype = "out";</tag>
						</item>
						<item> in
							<tag> out.optype = "in";</tag>
						</item>
						<item> out
							<tag> out.optype = "out";</tag>
						</item>
				</one-of>
    </rule>
    
</grammar>
